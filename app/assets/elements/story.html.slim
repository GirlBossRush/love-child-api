polymer-element name="x-story" attributes="_id _title author createdat description"
  template
    core-ajax url="/stories/{{_id}}.json" auto=true handleAs="json" on-core-response="{{populate}}"

    header.headline
      .title
        | {{story._title}}

      .description
        | {{story.description}}

      .author
        | {{story.author}}

      human-time datetime="{{story.created_at}}"
      hr.section-seperator

    article.body
      | {{story.body}}
    footer.summary

