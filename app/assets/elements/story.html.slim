polymer-element name="x-story" attributes="_id _title author createdat description"
  template
    polymer-ajax url="/stories/{{_id}}.json" auto=true handleAs="json" on-polymer-response="{{populate}}"

    header.headline
      .title
        | {{story._title}}

      .description
        | {{story.description}}

      .author
        | {{story.author}}

      time#created-at datetime="{{story.created_at_formatted}}" title="{{story.created_at_formatted}}"
        | {{story.created_at_humanized}}
      hr.section-seperator

    article.body
      | {{story.body}}
    footer.summary

